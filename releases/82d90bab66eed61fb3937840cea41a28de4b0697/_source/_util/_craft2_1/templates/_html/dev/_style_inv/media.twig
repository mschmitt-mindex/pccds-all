<% const currentSection = 'media' %>
<% const modules = [] %>

<% const intro = false %>

<% modules.push({
    "title": "Lazy-Loading Audio File",
    "description": "Plays an audio file using default browser controls. Waits until user has scrolled down to the element to load the audio file.",
    "background": "light",
    "twigCode":
`{% import 'macros/media' as media %}
{{ media.audio({ 'url': 'https://starter.wbrowar.com/audio/clip.mp3' }) }}`,
    "options": [
        { "name": 'modifiers', "required": false, "type": 'string', "default": `''`, "description": `Classes added that allow for variations in styles or functionality.` },
        { "name": 'url', "required": true, "type": 'string', "default": `#`, "description": `URL of audio file.` }
    ]
}); %>

<% modules.push({
    "title": "Lazy-Loading Iframe",
    "description": "An iframe used to embed video content. Wraps the iframe in a `video` class to resize video in a 16:9 ratio. Waits until user has scrolled down to the element to load iframe content.",
    "background": "light",
    "twigCode":
`{% import 'macros/media' as media %}
{{ media.video({ 'id': 'G4Sn91t1V4g', 'source': 'youtube' }) }}`,
    "options": [
        { "name": 'controls', "required": false, "type": 'boolean', "default": `true`, "description": `Display controls on or off.` },
        { "name": 'id', "required": false, "type": 'string', "default": ``, "description": `ID of video as found on video hosting sites. Usually can be pulled from a URL or video embed tag.` },
        { "name": 'modifiers', "required": false, "type": 'string', "default": `''`, "description": `Classes added that allow for variations in styles or functionality.` },
        { "name": 'source', "required": false, "type": 'string', "default": `'file'`, "description": `Changes embed code based on source of the video. Options include: <b>youtube</b>, <b>vimeo</b>, or <b>file</b>.` },
        { "name": 'url', "required": false, "type": 'string', "default": `#`, "description": `URL of video file used when the source option is set to 'file'.` }
    ]
}); %>

