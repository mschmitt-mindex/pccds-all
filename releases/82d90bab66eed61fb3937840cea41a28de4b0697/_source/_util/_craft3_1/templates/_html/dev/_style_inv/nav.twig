{# @var craft \craft\web\twig\variables\CraftVariable #}

<% const currentSection = 'nav' %>
<% const modules = [] %>

<% const intro = false %>

<% modules.push({
    "title": "Pager",
    "description": "Navigate through pages of news items and other content types.",
    "background": "light",
    "twigCode":
`{% import 'macros/component.twig' as component %}

{% paginate craft.entries.limit(20) as pageInfo, pageEntries %}
{% for item in pageEntries %}
    {{ item.title }}<br>
{% endfor %}

{{ component.c('pager', { pageInfo: pageInfo, maxLinks: 5 }) }}`,
    "options": [
        { "name": 'pageInfo', "required": true, "type": 'pageInfo object from `paginate` tag', "description": `The info used to let the pager know what the current page is.` },
        { "name": 'maxLinks', "required": false, "type": 'integer', "default": `5`, "description": `The amount of links to show in the middle of the pager.` }
    ]
}); %>

<%- include('../../ejs_includes/style_inventory/_wrapper', {"activeItem": currentSection, "intro": intro, "modules": modules}) %>