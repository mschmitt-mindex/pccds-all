{% extends "_amp_layout" %}

{% set pageSection = 'inside' %}
{% set jsSection = 'inside' %}

{% if entry is not defined %}
  {% set entrySlug = craft.request.getSegment(2) %}
  {% set entry = craft.entries.section("news").slug(entrySlug).first() %}
{% endif %}

{% block critcss %}
  <% if (critCssEnabled) { %><style><%- include(critcssamp) %></style><% } else { %><!-- CRITICAL CSS --><% } %>
{% endblock %}

{% block content %}
  {% import "macros/content" as content %}

  {{ content.body(entry.bodyContent, _context, layoutType) }}
{% endblock %}