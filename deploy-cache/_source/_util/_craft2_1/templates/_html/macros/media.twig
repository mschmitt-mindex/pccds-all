{# AUDIO #}
{% macro audio(options) %}{% spaceless %}
    {% set modifiers = options.modifiers ?? '' %}
    {% set url = options.url ?? '#' %}

    <div class="c_audio{% if modifiers ?? false %} {{ modifiers }}{% endif %}">
        <audio data-lazy-load data-src="{{ url }}" controls></audio>
        <noscript><audio src="{{ url }}" controls></audio></noscript>
    </div>

    {#
    ADD SOUNDCLOUD
    <iframe width="100%" height="166" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/{{ block.trackId }}&color=ee3124"></iframe>
    #}
{% endspaceless %}{% endmacro %}

{# VIDEO #}
{% macro video(options) %}{% spaceless %}
    {% set controls = options.controls ?? true %}
    {% set id = options.id ?? '' %}
    {% set modifiers = options.modifiers ?? '' %}
    {% set source = options.source ?? 'file' %}
    {% set url = options.url ?? '#' %}

    <div class="c_video{% if modifiers ?? false %} {{ modifiers }}{% endif %}">
        {% if source == 'youtube' %}
            <iframe data-lazy-load data-src="https://www.youtube.com/embed/{{ id }}?rel=0&amp;controls=0&amp;showinfo=0" width="853" height="480"  frameborder="0" allowfullscreen></iframe>
            <noscript><iframe src="https://www.youtube.com/embed/{{ id }}?rel=0&amp;controls=0&amp;showinfo=0" width="853" height="480"  frameborder="0" allowfullscreen></iframe></noscript>
        {% elseif source == 'vimeo' %}
            <iframe data-lazy-load data-src="https://player.vimeo.com/video/{{ id }}?title=0&byline=0&portrait=0" width="500" height="281" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
            <noscript><iframe src="https://player.vimeo.com/video/{{ id }}?title=0&byline=0&portrait=0" width="500" height="281" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe></noscript>
        {% else %}
            <video data-lazy-load data-src="{{ url }}" {{ controls ? 'controls' : '' }}></video>
            <noscript><video src="{{ url }}" {{ controls ? 'controls' : '' }}></video></noscript>
        {% endif %}
    </div>
{% endspaceless %}{% endmacro %}

{% macro videoBg(options) %}{% spaceless %}
    {% set autoplay = options.autoplay ?? true %}
    {% set lazyLoad = options.lazyLoad ?? true %}
    {% set loop = options.loop ?? true %}
    {% set modifiers = options.modifiers ?? '' %}
    {% set url = options.url ?? '#' %}

    {% if url ?? false %}
        <div class="c_video_bg{% if modifiers ?? false %} {{ modifiers }}{% endif %}">
            <video class="c_video_bg__video" {% if lazyLoad %}data-lazy-load data-{% endif %}src="{{ url }}" preload muted {{ autoplay ? 'autoplay' : '' }} {{ loop ? 'loop' : '' }}></video>
        </div>
    {% endif %}
{% endspaceless %}{% endmacro %}