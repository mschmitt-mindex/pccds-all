{# @var craft \craft\web\twig\variables\CraftVariable #}

<% const currentSection = 'icons' %>
<% const modules = [] %>

<% const intro = false %>

<% modules.push({
    "title": "Social Media Icons",
    "description": `Links to social media proporties`,
    "background": "dark",
    "twigCode":
`{% import 'macros/component.twig' as component %}
{% set options = {
    links: {
        'facebook': 'https://www.facebook.com/username',
        'twitter': 'https://twitter.com/username',
        'linkedin': 'https://www.linkedin.com/company/username',
        'youtube': 'https://www.youtube.com/user/username',
        'pinterest': 'https://www.pinterest.com/username',
        'instagram': 'https://www.instagram.com/username',
        'snapchat': 'https://www.snapchat.com/add/username',
        'email': 'hello@example.com',
    }
} %}
{{ component.c('social_nav', options) }}`,
    "options": [
        { "name": 'links', "required": true, "type": 'object', "default": `{}`, "description": `List of URLs to social media properties. For example: <b>links: { facebook: 'https://facebook.com/example' }</b>` }
    ]
}); %>

<% modules.push({
    "title": "Social Media Sharing",
    "description": `Share a URL on a default set of social media platforms. Add an image to allow for sharing on more networks.`,
    "background": "dark",
    "twigCode":
`{% import 'macros/component.twig' as component %}
{% set options = {
    title: 'Title of Article',
    url: url(craft.app.request.pathInfo),
} %}
{{ component.c('social_share', options) }}`,
    "options": [
        { "name": 'image', "required": false, "type": 'AssetFileModel', "description": `An image that can be passed into social sharing tools that allow for images. For example, Twitter Cards will show an image if passed in. <i>NOTE: While image is not required for this component, it is required for the Pinterest sharing icon to appear.</i>` },
        { "name": 'title', "required": true, "type": 'string', "default": `''`, "description": `The title of the post as shown on Twitter Cards, LinkedIn posts, etc...` },
        { "name": 'url', "required": true, "type": 'string', "default": `'#'`, "description": `The URL of the page being shared.` }
    ]
}); %>

<%- include('../../ejs_includes/style_inventory/_wrapper', {"activeItem": currentSection, "intro": intro, "modules": modules}) %>